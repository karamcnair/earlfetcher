extends layout

block content
  h1= title
  p Welcome to #{title}

  div.requestedUrl
    form(name="requestedUrl", action="/", method="get")
      input(type="text", name="theUrl")

  if theUrl
    p= theUrl
  else
    p No url yet!

  p
    summaryTable


   p !{summaryTable}

   p ---
    each val, key in summaryTable
        p #{key}: open: #{val.open} close: #{val.close}

  if retrievedHTML
    pre= retrievedHTML